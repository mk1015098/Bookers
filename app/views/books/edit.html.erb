
<% if @book.errors.any? %>
  <%= @book.errors.count %>error occurred.
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-5 mx-auto">
        <h2>Editing Book</h2>
        <%= form_with model: @book do |f| %>
        <div class="form-group">
          <h6>Title</h6>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <h6>Opinion</h6>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class:"btn btn-success" %>
        </div>
        <% end %>
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", :action =>'index' %>
      </div>
    </div>
  </div>
</main>

