
<%= render'userinfo', book: @book %>


<h2>Books</h2>
<table class="table table-hover table-invers">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
